[init]
    defaultBranch = main

[user]
    useConfigOnly = true

[gpg]
    format = ssh

[commit]
    gpgsign = true

[tag]
    gpgsign = true

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true

[merge]
	conflictStyle = zdiff3

